<Window x:Class="idadeJogador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:idadeJogador"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <Grid>
        <Label x:Name="lblIdade" Content="Digite a idade do jogador" HorizontalAlignment="Left" Margin="41,17,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIdade" HorizontalAlignment="Left" Margin="41,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.06"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="btnVerificar" Content="Verificar Idade" HorizontalAlignment="Left" Margin="41,72,0,0" VerticalAlignment="Top" Width="146" Click="btnVerificar_Click"/>

    </Grid>
</Window>
